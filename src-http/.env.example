# Server
PORT=8787
BASE_URL=
CORS_ALLOW_ORIGIN=*

# MCP CLI bridge
MCP_CLI_CMD=php ../cli.php
MCP_CLI_CWD=/optional/working/directory
MCP_CLI_TRACE_STDOUT=false
MCP_REQUIRE_AUTH=false

# OAuth2 minimal (ChatGPT-compatible)
OAUTH_CLIENT_ID=mcp-client
OAUTH_CLIENT_SECRET=mcp-secret
OAUTH_REDIRECT_URIS=http://localhost:3000/callback
AUTH_ADAPTER=local
OAUTH_STATE_TTL_SECONDS=900
OAUTH_CODE_TTL_SECONDS=600
OAUTH_TOKEN_TTL_SECONDS=3600
OAUTH_REFRESH_TTL_SECONDS=86400

# Entra ID (AUTH_ADAPTER=entra)
ENTRA_TENANT_ID=
ENTRA_CLIENT_ID=
ENTRA_CLIENT_SECRET=
ENTRA_REDIRECT_URI=
ENTRA_SCOPES=openid profile email
ENTRA_AUTHORITY_HOST=https://login.microsoftonline.com
