{
    "name": "dv-team/mcp-server",
    "description": "Basic and easy to use PHP based MCP Server",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/dv-team/php-mcp-server",
    "keywords": ["mcp", "server", "php"],
    "authors": [{
        "name": "Ron Kirschler",
        "email": "ron.kirschler@gmail.com"
    }],
    "require": {
        "php": ">= 8.2",
        "psr/log": ">= 1.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": ">= 0.1",
        "phpunit/phpunit": "^10.5",
        "spatie/yaml-front-matter": "^2.1",
        "justinrainbow/json-schema": "^6.6"
    },
    "autoload": {
        "psr-4": {
            "McpSrv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "McpSrv\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon --memory-limit=2G --no-progress",
        "test": "phpunit"
    }
}
